{
  "extends": "../../tsconfig.apps.base.json",
  "compilerOptions": {
      // All settings are as per remix rec's
      // https://remix.run/docs/hi/main/guides/typescript
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "./app/*" ]
    },
    "types": [
      "@vercel/remix",
      "vite/client",
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ]
}